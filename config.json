{
  "port": 3000,
  "supportedFileTypes": [
    "image/jpeg",
    "image/jpg"
  ],
  "uploadPath": "./uploads/",
  "dataStorage": {
    "resultsPath": "./data/results/",
    "archivePath": "./data/archive/",
    "tempPath": "./data/temp/",
    "backupInterval": 86400000
  },
  "resultsPath": "./data/results.json",
  "processingCompleteFlagPath": "./data/processing_complete.flag",
  "logging": {
    "level": "info",
    "errorLogFile": "./logs/error.log",
    "combinedLogFile": "./logs/combined.log",
    "maxFiles": "14d",
    "maxSize": "20m",
    "verboseMode": false,
    "payloadTruncation": {
      "enabled": true,
      "maxLength": 500
    },
    "samplingRate": {
      "enabled": true,
      "performanceMetrics": 0.1,
      "payloadLogging": 0.05
    }
  },
  "openAI": {
    "model": "gpt-5.1",
    "maxTokens": 4000,
    "localCache": true,
    "cacheExpiry": 604800000,
    "reasoningEffort": null
  },
  "anthropic": {
    "model": "claude-sonnet-4-5",
    "maxTokens": 4000,
    "localCache": true,
    "cacheExpiry": 604800000
  },
  "upload": {
    "maxFileCount": 100,
    "retryDelaySeconds": 3,
    "maxRetryCount": 3,
    "maxFileSize": "50mb",
    "maxConcurrent": 3
  },
  "environment": "development",
  "local": {
    "autoLaunchBrowser": true,
    "defaultBrowser": "chrome",
    "saveLastSession": true,
    "autoBackup": true
  },
  "burialRegister": {
    "outputDir": "./data/burial_register",
    "volumeId": "vol1",
    "csv": {
      "includeHeaders": true,
      "encoding": "utf-8"
    },
    "apiTimeout": 90000
  },
  "database": {
    "path": "./data/memorials.db"
  },
  "monumentCropping": {
    "enabled": false,
    "minWidth": 400,
    "minHeight": 400,
    "aspectRatioMin": 0.5,
    "aspectRatioMax": 2.0
  },
  "graveCard": {
    "stitchPadding": 20,
    "minResolution": 1000,
    "maxExportInterments": 8
  }
}